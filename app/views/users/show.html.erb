<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @user.books %>
      <%= form_with url: user_count_path(@user), method: :get, remote: true do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit "検索" %>
      <% end %>

      <div id="count">
        <% if @books_count.present? %>
          <%= render "users/books_count" %>
        <% end %>
      </div>
    </div>
  </div>
</div>